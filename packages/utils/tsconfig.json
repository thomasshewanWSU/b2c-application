{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@repo/db/*": ["../db/src/*"],
      "@repo/db": ["../db/src"]
    }
  },
  "include": [
    "src",
    "src/**/*",
    "src/types/*.d.ts",
    "../../apps/web/src/components/cart/AddToCartButton.tsx",
    "../../apps/web/src/components/products/Tabs.tsx",
    "../../apps/web/src/components/products/ProductDetailView.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
