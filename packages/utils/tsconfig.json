{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@repo/db/*": ["../db/src/*"],
      "@repo/db": ["../db/src"]
    }
  },
  "include": ["src", "src/**/*", "src/types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
